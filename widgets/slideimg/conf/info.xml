 		</var>
		<var id="smslide_3_text">
 			<name xml:lang="ko">세번째 이미지 설명 (html 사용가능)</name> 
 			<type>textarea</type>
 			<description xml:lang="ko">세번째로 나올 이미지 설명을 입력합니다.</description> 
 		</var>
		<var id="smslide_3_target" type="select">
 			<name xml:lang="ko">세번째 이미지 타겟</name> 
 			<options>
				<value></value>
				<name xml:lang="ko">현재</name>
			</options>
			<options>
				<value>_blank</value>
				<name xml:lang="ko">새창</name>
			</options>
		</var>

		<var id="smslide_4">
 			<name xml:lang="ko">네번째 이미지</name> 
 			<type>text</type>
 			<description xml:lang="ko">네번째로 나올 이미지를 설정합니다.</description> 
 		</var>
		<var id="smslide_4_url">
 			<name xml:lang="ko">네번째 이미지 연결링크</name> 
 			<type>text</type>
